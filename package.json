{
	"name": "duc-extension",
	"displayName": "DUC Extension",
	"description": "DUG DUC Extension",
	"icon": "resources/dug_logo.png",
	"version": "0.0.4",
	"repository": {
		"type": "git",
		"url": "https://github.com/TaeHongGil/duc-extension.git"
	},
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "DOUBLEUGAMES",
	"activationEvents": [
		"onView:nodeDependencies",
		"onView:fileExplorer",
		"onCommand:duc.deploy",
		"onCommand:duc.install",
		"onCommand:duc.gradleTask",
		"onCommand:duc.viewContainer",
		"onCommand:duc.webpack",
		"onCommand:duc.refresh",
		"onCommand:duc.serverstop",
		"onCommand:fileExplorer.deploy",
		"onCommand:fileExplorer.install",
		"onCommand:fileExplorer.gradleTask",
		"onCommand:fileExplorer.webpack",
		"onCommand:fileExplorer.refreshFile",
		"onCommand:fileExplorer.updateAll"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "package-explorer",
					"title": "DUC Directory",
					"icon": "resources/dug_view.png"
				}
			]
		},
		"views": {
			"package-explorer": [
				{
					"id": "nodeDependencies",
					"name": "",
					"icon": "media/dep.svg",
					"contextualTitle": "Package Explorer"
				}
			]
		},
		"configuration": [
			{
				"title": "DUC",
				"properties": {
					"DUC.jvmPath": {
						"type": "string",
						"default": "",
						"description": "JVM 8 Home 경로"
					}
				}
			},
			{
				"title": "DUC",
				"properties": {
					"DUC.gradlePath": {
						"type": "string",
						"default": "",
						"description": "Gradle 2.14.1 경로"
					}
				}
			},
			{
				"title": "DUC",
				"properties": {
					"DUC.serverName": {
						"type": "string",
						"default": "",
						"description": "Tomcat Server Name"
					}
				}
			}
		],
		"commands": [
			{
				"command": "fileExplorer.refreshFile",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "fileExplorer.install",
				"title": "Maven Install"
			},
			{
				"command": "fileExplorer.updateAll",
				"title": "Maven Update All"
			},
			{
				"command": "fileExplorer.deploy",
				"title": "Maven Deploy"
			},
			{
				"command": "fileExplorer.gradleTask",
				"title": "Gradle Task"
			},
			{
				"command": "fileExplorer.webpack",
				"title": "Maven Webpack"
			},
			{
				"command": "duc.deploy",
				"title": "Simulation Deploy",
				"category": "DUC"
			},
			{
				"command": "duc.serverstop",
				"title": "Server Force Stop",
				"category": "DUC"
			},
			{
				"command": "duc.refresh",
				"title": "Local Simulation Refresh",
				"category": "DUC"
			},
			{
				"command": "duc.gradleTask",
				"title": "UI Gradle Task",
				"category": "DUC"
			},
			{
				"command": "duc.webpack",
				"title": "UI Webpack",
				"category": "DUC"
			}
		],
		"menus": {
			"commandPalette": [
			],
			"view/title": [
				{
					"command": "fileExplorer.refreshFile",
					"when": "view == nodeDependencies",
					"group": "navigation"
				},
				{
					"command": "fileExplorer.updateAll",
					"when": "view == nodeDependencies"
				}
			],
			"view/item/context": [
				{
					"command": "fileExplorer.install",
					"group": "3_compare",
					"when": "view == nodeDependencies && viewItem == entry"
				},
				{
					"command": "fileExplorer.updateAll",
					"group": "3_compare",
					"when": "view == nodeDependencies && viewItem == entry"
				},
				{
					"command": "fileExplorer.webpack",
					"group": "2_workspace",
					"when": "view == nodeDependencies && viewItem == entry"
				},
				{
					"command": "fileExplorer.gradleTask",
					"group": "2_workspace",
					"when": "view == nodeDependencies && viewItem == entry"
				},
				{
					"command": "fileExplorer.deploy",
					"group": "navigation",
					"when": "view == nodeDependencies && viewItem == entry"
				},
				{
					"command": "fileExplorer.refreshFile",
					"when": "view == nodeDependencies && viewItem == entry",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mkdirp": "^1.0.2",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/rimraf": "^3.0.2",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.5",
		"webpack": "^5.69.1",
		"webpack-cli": "^4.9.2"
	}
}
